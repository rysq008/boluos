<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.pusupanshi.boluolicai"
    android:id="@+id/object_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/home_item_newer_tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="24dp"
            android:background="@drawable/index_bg_xsb"
            android:gravity="center"
            android:text="新手标"
            android:textColor="#fff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/home_item_newer_tv_right"
            android:layout_width="61dp"
            android:layout_height="19dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="24dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/button_bg_corners_stroke_red_5dip"
            android:gravity="center"
            android:text="限投一次"
            android:textColor="@color/f15a4a"
            android:textSize="11sp" />

        <com.delevin.boluolcs.view.RoundProgressBar
            android:id="@+id/object_PieCharViewBuy"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/layout011"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="41dp"
            app:roundWidth="8dp"
            app:textColors="#666"
            app:textIsDisplayable="false"
            app:textSize="12sp" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="101dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/object_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="【汽车宝3089期】"
                android:textColor="#333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="预期年化收益率"
                android:textColor="#999"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/layout011"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/object_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/f15a4a"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textColor="#de2400"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/object_rate_increase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/f15a4a"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/object_PieCharViewBuy"
            android:layout_alignTop="@+id/layout022"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/object_yues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/f15a4a"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:text="剩余金额"
                android:textColor="#999"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/object_yues"
                android:layout_alignBottom="@+id/object_yues"
                android:layout_toRightOf="@+id/object_yues"
                android:text="元"
                android:textColor="#666"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout022"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignRight="@+id/object_PieCharViewBuy"
            android:layout_below="@+id/object_PieCharViewBuy" >

            <TextView
                android:id="@+id/object_time_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="-"
                android:textColor="@color/f15a4a"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/object_time_limit"
                android:layout_alignBottom="@+id/object_time_limit"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/object_time_limit"
                android:text="天"
                android:textColor="#666"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:text="期限"
                android:textColor="#999"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="300dp"
            android:layout_height="44dp"
            android:layout_below="@+id/linearLayout2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_bg_corners_solid_red_5dip"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="#fff"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:background="@color/huise" />
    </RelativeLayout>

</LinearLayout>