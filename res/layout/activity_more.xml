                </LinearLayout> -->

                <Button
                    android:id="@+id/boluos_exit"
                    style="@style/shape_bt_niu"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="30dp"
                    android:text="退出" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>