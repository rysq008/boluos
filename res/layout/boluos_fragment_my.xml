<?xml version="1.0" encoding="utf-8"?>
<com.delevin.boluolcs.utils.PullToRefreshView 
    android:id="@+id/my_pull"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none" >
<FrameLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    >
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@color/boluo_Yellow"
            android:orientation="vertical" >

            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp" >
                        
                <ImageView
                    
                    android:id="@+id/my_img_headpic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/my_boluo_icon" />

                <TextView
                    android:id="@+id/my_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="您好"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/my_eyes_checkbox"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:button="@null"
                    android:background="@drawable/my_eyes_bg" />
              </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_yes_bankcard"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                
            	<RelativeLayout
                android:id="@+id/my_total_layout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="20dp" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="总资产（元）"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/my_total_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="---"
                    android:textColor="@color/white"
                    android:textSize="34sp" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/my_total_money"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/my_big_bid" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/my_total_layout" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="账户余额（元）"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/my_balance_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="---"
                    android:textColor="@color/white"
                    android:textSize="26sp" />

            </RelativeLayout>
                
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_not_bankcard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="即刻绑卡，玩转理财 ~"
                    android:textSize="18sp"
                    android:textColor="@color/white" />
                <Button
                    android:id="@+id/My_bangdingbankcard"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/textView3"
                    android:layout_marginTop="25dp"
                    android:text="绑定银行卡"
                    android:background="@drawable/bangka_button"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
                
            </RelativeLayout>
            
        </LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:orientation="horizontal"
	    android:gravity="center_vertical" >
	
	    <TextView
	        android:id="@+id/my_pay"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:text="充值"
	        android:gravity="center"
	        android:textColor="@color/boluo_Yellow"
	        android:textSize="17sp" />
	
		<View 
			android:layout_width="2dp"
			android:layout_height="match_parent"
			android:layout_marginTop="5dp"
			android:layout_marginBottom="5dp"
			android:background="@color/huise"/>
	
	   	<TextView
	   	    android:id="@+id/my_tixian"
	   		android:layout_width="0dp"
	   		android:layout_height="match_parent"
	   		android:layout_weight="1"
	   		android:text="提现"
	   		android:gravity="center"
	   		android:textColor="@color/boluo_Yellow"
	   		android:textSize="17sp" />
	    
	</LinearLayout>
		<View 
		    android:layout_width="match_parent"
		    android:layout_height="8dp"
		    android:background="@color/huise"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
	   	
            <RelativeLayout
                android:id="@+id/my_touzi_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/white" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/my_touzi" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@+id/imageView2"
                    android:text="我的投资"
                    android:textColor="#666"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/my_title_bid" />

                
            </RelativeLayout>
            <TextView 
    			android:layout_width="match_parent"
    			android:layout_height="1dp"
    			android:background="@color/gray_bg"/>
            <RelativeLayout
                android:id="@+id/my_money_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/white" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/my_money" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@+id/imageView3"
                    android:text="资金记录"
                    android:textColor="#666"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/my_title_bid" />

                
            </RelativeLayout>
            <TextView 
    			android:layout_width="match_parent"
    			android:layout_height="1dp"
    			android:background="@color/gray_bg"/>
            
            <RelativeLayout
                android:id="@+id/my_page_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/white" >

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/my_page" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@+id/imageView4"
                    android:text="我的优惠券"
                    android:textColor="#666"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/my_title_bid" />

                <TextView
                    android:id="@+id/my_redPacketNumBer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="#de2400"
                    android:textSize="16sp" 
                    android:layout_toRightOf="@+id/textView5"
                   />
            </RelativeLayout>

            <TextView 
    			android:layout_width="match_parent"
    			android:layout_height="1dp"
    			android:background="@color/gray_bg"/>
            
            <RelativeLayout
                android:id="@+id/my_bank_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/white" >

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/my_bank" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@+id/imageView5"
                    android:text="我的银行卡"
                    android:textColor="#666"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/my_title_bid" />

                
            </RelativeLayout>
            <TextView 
    			android:layout_width="match_parent"
    			android:layout_height="1dp"
    			android:background="@color/gray_bg"/>
            
            <RelativeLayout
                android:id="@+id/my_safe_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/white" >

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/my_safe" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@+id/imageView6"
                    android:text="安全管理"
                    android:textColor="#666"
                    android:textSize="16sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/my_title_bid" />
            </RelativeLayout>
            <TextView 
    			android:layout_width="match_parent"
    			android:layout_height="1dp"
    			android:background="@color/gray_bg"/>
            <RelativeLayout
                android:id="@+id/my_many_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/white" >
                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/my_many" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@+id/imageView7"
                    android:text="更多"
                    android:textColor="#666"
                    android:textSize="16sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/my_title_bid" />
            </RelativeLayout>
            <TextView 
    			android:layout_width="match_parent"
    			android:layout_height="1dp"
    			android:background="@color/gray_bg"/>
   	
            
        </LinearLayout>
    </LinearLayout>
     <LinearLayout
            android:id="@+id/mys_visibility_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#4b000000"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
             >

            <ImageView
                android:id="@+id/mys_visibility_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jiazai" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|center_horizontal"
                android:text="请稍后"
                android:textColor="@color/white" />
        </LinearLayout>
</FrameLayout>
</ScrollView>
</com.delevin.boluolcs.utils.PullToRefreshView>