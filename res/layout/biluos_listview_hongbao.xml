<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <FrameLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout 
        android:id="@+id/listview_hongbao_layouts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
         <com.delevin.boluolcs.view.ListView.XListView 
        android:id="@+id/listview_hongbao_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        ></com.delevin.boluolcs.view.ListView.XListView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/listview_hongbao_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="#4b000000"
        android:layout_gravity="center"
        android:gravity="center"
        
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/listview_hongbao_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jiazai" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|center_horizontal"
            android:text="请稍后"
            android:textColor="@color/white" />
    </LinearLayout>
     <RelativeLayout 
        android:id="@+id/listview_hongbao_rl_none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" >
        <ImageView
            android:id="@+id/listview_hongbao_img_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/boluo_nonebid" />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/listview_hongbao_img_none"
            android:layout_marginTop="5dp"
            android:text="暂无数据" />
        
    </RelativeLayout>
</FrameLayout>
    

</LinearLayout>
