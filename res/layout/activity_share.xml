<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/share_bg"
    android:orientation="vertical" >
    <View
        android:id="@+id/statusBarview"
        style="@style/statusBar" />

    <com.delevin.boluolcs.view.TitleView
        android:id="@+id/share_titleview"
        android:layout_width="match_parent"
        android:layout_height="50dp" >
    </com.delevin.boluolcs.view.TitleView>
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >
        <LinearLayout 
            android:layout_width="match_parent"
        	android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                
                <TextView
                	android:id="@+id/share_textView1"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:layout_centerHorizontal="true"
                	android:layout_marginTop="24dp"
                	android:textColor="#fff"
                	android:textSize="19sp"
                	android:text="邀请好友投资赠送50元红包" />

                <TextView
                    android:id="@+id/hare_textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/share_textView1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:textColor="#fff"
                    android:textSize="19sp"
                    android:text="并且返1%收益" />
                
                <RelativeLayout
                	android:layout_width="match_parent"
                	android:layout_height="match_parent"
                	android:layout_centerHorizontal="true"
                	android:layout_below="@+id/hare_textView12"
                	android:layout_marginLeft="15dp"
                	android:layout_marginRight="15dp"
                	android:layout_marginTop="17dp"
                	android:background="#fff" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/share_boluo_icon" />

                    <ImageView
                        android:id="@+id/imageView_erweima"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView1"
                        android:layout_marginTop="25dp"
                        android:layout_centerHorizontal="true"
                        />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/imageView_erweima"
                        android:layout_marginTop="12dp"
                        android:textSize="17dp"
                        android:text="扫一扫二维码，邀请好友" />
                    <Button 
        				android:id="@+id/fengxiang"
        				android:layout_width="150dp"
        				android:layout_height="50dp"
        				android:layout_centerHorizontal="true"
                        android:layout_below="@+id/textView1"
                        android:layout_marginTop="18dp"
                        android:background="#ffffbb33"
                        android:textColor="#fff"
                        android:textSize="18sp"
        				android:text="分享我的二维码"/>
                    
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/fengxiang"
                        android:layout_marginTop="12dp"
                        android:text="" />
                
            </RelativeLayout>
                
            </RelativeLayout>

            
      
      </LinearLayout>
        
    </ScrollView>
    

</LinearLayout>
